    "@nestjs/schematics": "^11.0.9",
    "@nestjs/swagger": "^11.2.6",
    "@nestjs/testing": "^11.1.13",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/nodemailer": "^7.0.11",
    "@types/passport-jwt": "^4.0.1",
    "@types/qrcode": "^1.5.6",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "9.39.3",
    "eslint-config-prettier": "^10.1.8",
